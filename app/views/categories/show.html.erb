<div class="mx-auto md:w-2/3 w-full flex-col">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @category %>

    
    <div class="flex gap-x-1 w-full">
      <%= link_to 'Edit category', edit_category_path(@category), class: "mt-2 rounded-lg py-1 px-2 bg-gray-100 font-medium flex-1" %>
      <%= button_to 'Delete', category_path(@category), method: :delete, class: "mt-2 rounded-lg py-1 px-2 bg-gray-100 font-medium flex-1" %>
    </div>
  </div>

  <div class="container mt-10">
    <%= link_to "Add Transaction", new_category_cashflows_path(params[:id]), class: "ml-2 rounded-lg py-1 px-2 bg-gray-100 font-medium flex-1" %>
    <ul>
      <% @cashflows.each do |cashflow|%>
        <li>
          <h2><%= cashflow.name %></h2>
          <p>USD <%= cashflow.amount %></p>
          <small>Added at: <%= cashflow.created_at%></small>
        </li>
      <% end %>
    </ul>    
  </div>
</div>
