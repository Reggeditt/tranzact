<div id="<%= dom_id category %>">
  <div class="flex w-200 gap-10 items-center">
    <%= image_tag "#{category.icon}", alt: 'category icon', class: "w-20 rounded-full" %>
    <p class="my-5">
      <strong class="block font-medium mb-1 capitalize"><%= category.name %></strong>
    </p>
    <p>Transaction volume: USD <%= category.cashflows.sum(:amount)%></p>
  </div>
  <% if action_name != "show" %>
    <%= link_to "Show details", category, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit', edit_category_path(category), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Delete",  %>
    <hr class="mt-6">
  <% end %>
</div>
