<div id="<%= dom_id cashflow %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= cashflow.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Category:</strong>
    <%= cashflow.category_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this cashflow", cashflow, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this cashflow', edit_cashflow_path(cashflow), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
